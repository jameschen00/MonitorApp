<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jithin.monitorapp.doctor.DoctorPatientHomeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <android.support.v7.widget.CardView
            android:id="@+id/firstCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:elevation="5dp"
            app:cardElevation="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <android.support.v7.widget.CardView
                    android:id="@+id/secondCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="5dp"
                    app:cardElevation="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:id="@+id/patientNameTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:text="Patient Name"
                            android:textColor="@color/colorPrimary"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/patientRiskScore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/patientNameTv"
                            android:layout_marginLeft="15dp"
                            android:text="Risk Score: "
                            android:textColor="@color/colorAccent"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/patientAgeTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/patientRiskScore"
                            android:layout_marginLeft="15dp"
                            android:text="Age:  "
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/patientSmoker"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/patientAgeTv"
                            android:layout_marginLeft="15dp"
                            android:text="Smoker: "
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/patientTreatment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/patientSmoker"
                            android:layout_marginLeft="15dp"
                            android:text="Tretment for blood pressure: "
                            android:textSize="14sp" />

                        <Button
                            android:id="@+id/button"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_alignBottom="@+id/patientRiskScore"
                            android:layout_marginLeft="30dp"
                            android:layout_marginStart="30sp"
                            android:layout_toEndOf="@+id/patientNameTv"
                            android:layout_toRightOf="@+id/patientNameTv"
                            android:background="@drawable/alert_btn_back"
                            android:elevation="5dp"
                            android:onClick="sendAlert"
                            android:shadowRadius="2"
                            android:text="Alert"
                            android:textColor="@color/white" />

                        <Button
                            android:id="@+id/button2"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="7dp"
                            android:layout_marginStart="5dp"
                            android:layout_toEndOf="@+id/button"
                            android:layout_toRightOf="@+id/button"
                            android:background="@drawable/chat_button_back"
                            android:elevation="5dp"
                            android:onClick="sendMessage"
                            android:shadowRadius="2"
                            android:text="message"
                            android:textColor="@color/white" />


                    </RelativeLayout>


                </android.support.v7.widget.CardView>


                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/newchart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/secondCard"
                    android:elevation="5dp" />


            </RelativeLayout>


        </android.support.v7.widget.CardView>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
